<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="manager.javafx.controller.MenuController">
   <children>
      <VBox prefHeight="500.0" prefWidth="500.0">
         <children>
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="500.0" text="Jelszó-tár">
               <font>
                  <Font size="50.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onPasswordGeneratorClick" prefWidth="250.0" text="Jelszó generálás">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="125.0" right="125.0" top="100.0" />
               </VBox.margin>
            </Button>
            <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onStoredPasswordClick" prefWidth="250.0" text="Tárolt jelszavak">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="125.0" right="125.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onLogoutClick" prefWidth="150.0" text="Kilépés" textFill="RED">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="175.0" right="175.0" top="90.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
